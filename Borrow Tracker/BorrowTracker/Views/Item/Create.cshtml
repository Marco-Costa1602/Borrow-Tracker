@model GroceryStore.Models.Item;

@{
    ViewData["Title"] = "Create Items";
}



<form method="post" asp-action="Create">
    <!--The action inside the controller and method are defined here-->
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Item</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <!--LABELS FOR ATTRIBUTES OF THE MODEL-->
                    <div class="col-4">
                        <label asp-for="ItemName"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Borrower"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Lender"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <!-- TEXT BOXES FOR DATA INPUT-->
                    <div class="col-4">
                        <input asp-for="ItemName" class="form-control" />  <!--The controller will take these as a parameter for the specified controller action-->
                    </div>
                    <div class="col-4">
                        <input asp-for="Borrower" class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="Lender" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Create" /> <!--BUTTON USED TO SUBMIT THE DATA-->
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a> <!-- BUTTON TO REDIRECT TO THE LIST VIEW PAGE-->
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>